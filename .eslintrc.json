{
  "extends": ["react-app", "eslint:recommended"],
  "globals": {
    "should": true,
    "sinon": true
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "mocha": true,
    "node": true
  },
  "parser": "babel-eslint",
  "plugins": ["import"],
  "rules": {
    "import/no-extraneous-dependencies": "error",
    "no-unused-vars": [
      "warn",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ],
    "no-console": "warn",
    "no-empty": "warn"
  }
}
